// 这里使用的函数，会自动将px转换成rem
notConverts = 'vw' 'vh' 'auto' 'rem' '%' 'em'
unitCover(val)
  if val is a 'ident' || unit(val) in notConverts
    val
  else
    unit(val / 100, 'rem')

invoke(list)
  for $i in 0..length(list) - 1
    list[$i] = unitCover(list[$i])
  return list

-pos(type, args)
  i = 0
  position: unquote(type)
  {args[i]}: args[i + 1] is a 'unit' ? unitCover(args[i += 1]) : 0
  {args[i += 1]}: args[i + 1] is a 'unit' ? unitCover(args[i += 1]) : 0

getFullPath(path)
  ext = extname(path)
  if ext
    path
  else
    path + '.png'
